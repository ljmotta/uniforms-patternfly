{
  "compilerOptions": {
    "lib": ["es6", "dom", "es2018.promise"],
    "baseUrl": ".",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "paths": {
      "uniforms": ["/node_modules/uniforms/es5"],
    },
    "strict": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "example",
    "examples",
    "__tests__",
    "__mocks__",
    "__dep",
  ]	  
}
